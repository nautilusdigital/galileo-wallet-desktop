{{#let (changeset (hash label=settings.label representative='gal_3e3j5tkog48pnny9dmfzj1r16pg8t1e76dz5tmac6iq689wyjfpiij4txtdo') ChangeAccountSettingsValidations) as |model|}}
  {{#bs-modal position='center' onHide=(action (optional onCancel)) as |modal|}}
    {{#modal.header}}
      <h4 class="modal-title">
        {{t 'accountSettings'}}
      </h4>
    {{/modal.header}}
    {{#modal.body}}
      {{! template-lint-disable no-unused-block-params }}
      {{#bs-form model=model onSubmit=(action (queue (action 'save' model) (action (optional onSave))) account) as |form|}}
        <div class="form-group">
          <label>{{t 'account'}}</label>
          {{account-address class="form-control-plaintext" value=account.id truncate=false}}
        </div>
        {{#if hasOpenBlock}}
          {{#form.element controlType="text" label='Representative' property='representative'
              minlength=64 maxlength=65 required=true readonly=true pattern="^(xrb|nano|gal)(_|-)[13](?![lv])[a-z1-9]{59}$" as |el|}}
            {{el.control class="text-truncate text-monospace"}}
          {{/form.element}}
        {{/if}}
      {{/bs-form}}
    {{/modal.body}}
    {{#modal.footer}}
      {{!--
      {{#bs-button onClick=(action 'remove' account) type="danger" class="mr-auto"}}
        {{t 'delete'}}
      {{/bs-button}}
      --}}
      {{#bs-button onClick=(action modal.close) type="secondary"}}
        {{t 'cancel'}}
      {{/bs-button}}
      {{#bs-button type="primary" buttonType='submit'}}
        {{fa-icon 'check'}}
        {{t 'save'}}
      {{/bs-button}}
    {{/modal.footer}}
  {{/bs-modal}}
{{/let}}
